{
  "manifest_version": 3,
  "name": "webnmap - Browser Network Scanner",
  "version": "1.1.0",
  "description": "Active reconnaissance, port scanning, and vulnerability analysis for the current tab.",
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Antigravity AI"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ]
}